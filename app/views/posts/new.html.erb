<div class="border-solid border-b">
  <%= link_to posts_path do %>
  <p class="flex items-center py-2.5 px-2.5"><span class="material-symbols-outlined pr-2">arrow_back</span>Criar publicação</p>
  <% end %>
</div>
<div class="flex py-1.5 border-solid border-b px-2.5">
  <%= image_tag current_user.avatar.url, class: "h-[48px] w-[48px] rounded-full" %>
  <div class="flex flex-col px-2.5">
    <p><%= current_user.name %></p>
    <p class="text-xs">Compartilhar com: OPÇÕES</p>
  </div>
</div>
<div>
  <%= simple_form_for(@post) do |f| %>
    <div class="field flex my-3 mx-1.5 ">
      <%= f.input :body, label: false, :as => :text, placeholder: "No que você está pensando?", :input_html => {:rows => 10, :cols => 20, :class => "rounded grow h-[200px] w-full"}, :wrapper_html => {:class => "w-full"} %>
    </div>
    <div class="actions flex justify-center bg-blue-700 rounded my-3 mx-1.5 ">
      <%= f.button :submit, "Publicar", class: "text-white text-sm rounded-md py-2.5 cursor-pointer grow bg-blue-700" %>
    </div>
  <%end %>
</div>
